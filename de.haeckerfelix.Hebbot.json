{
    "app-id" : "de.haeckerfelix.Hebbot",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "hebbot",
    "finish-args" : [
        "--share=network",
        "--filesystem=host",
        "--env=RUST_LOG=hebbot=debug"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "./cargo-home"
        }
    },
    "modules" : [
        {
            "name" : "hebbot",
            "buildsystem" : "simple",
            "build-commands" : [
                "cargo build",
                "install -D ./target/debug/hebbot /app/bin/hebbot"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/haecker-felix/hebbot.git"
                }
            ]
        }
    ]
}
